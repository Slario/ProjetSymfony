{% extends "base.html.twig" %}
{% block body %}

    <h1>
        Inscription

    </h1>

    <div>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }}">
            {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    </div>

    <div>


        {{ form_start(formUser) }}
        <div class="form-row">
        {{ form_row(formUser.username, {'attr': {'class': 'form-group col-md-6 form-control'}}) }}
        {{ form_row(formUser.password, {'attr': {'class': 'form-group col-md-6 form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_row(formUser.email, {'attr': {'class': 'form-control col-md-6'}} ) }}
        </div>
            <button type="submit">S'inscrire</button>

        {{ form_end(formUser) }}

    </div>


{% endblock %}
