{% extends 'base.html.twig' %}

{% block title %}Ad{% endblock %}

{% block body %}
    <h1>Mes Favoris</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>City</th>
            <th>Zip</th>
            <th>Price</th>
            <th>Category</th>
            <th>DateCreated</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for ad in ads %}
            <tr>
                <td>{{ ad.id }}</td>

                <td>{{ ad.title }}</td>

                <td>{{ ad.description }}</td>

                <td>{{ ad.city }}</td>

                <td>{{ ad.zip }}</td>

                <td>{{ ad.price }}</td>

                <td>{{ ad.category }}</td>

                <td>{{ ad.dateCreated ? ad.dateCreated|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                    <a href="{{ path('ad_show', {'id': ad.id}) }}">show</a>
                    <a href="{{ path('ad_edit', {'id': ad.id}) }}">edit</a>
                    {{ include('ad/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ad_index') }}">back to list</a>


{% endblock %}
